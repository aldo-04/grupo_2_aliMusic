<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="home">
        <%- include('../partials/header') %>
        <%- include('../partials/sidebar') %> 
            <main>
                <%- include('../partials/carrusel') %>

                    <%- include('../partials/banner') %>

                        <section class="novedades">

                            <h1>Basado en tu Ãºltima visita</h1>

                            <div class="div_container">
                                <% products.forEach(product=> { %>
                                    <% if (product.status==="visited" ) { %>
                                        <article class="art">
                                            <!-- INTENTAR PONERLO EN PARTIALS -->
                                            <a class="a_img" href="/products/detail/<%= product.id %>">
                                                <img src="/images/articulos/<%= product.image %>" alt="">
                                            </a>
                                            <div>
                                                <p class="off">
                                                    <%= product.discount>0 ? product.discount + '% OFF' : null %>
                                                </p>
                                                <p class="precio">$<%= product.price %>
                                                </p>
                                            </div>
                                            <nav class="nav_fav">
                                                <a href=""><i class="far fa-star"></i></a>
                                            </nav>
                                        </article>
                                        <% } %>
                                            <% }) %>
                            </div>
                        </section>
                        <section class="ofertas">

                            <h1>Nuevos articulos</h1>

