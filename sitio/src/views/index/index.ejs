<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="home">
        <%- include('../partials/header') %>
        <%- include('../partials/sidebar') %> 
            <main>
                <%- include('../partials/carrusel') %>

                    <%- include('../partials/banner') %>

                        <section class="novedades">

                            <h1>Basado en tu Ãºltima visita</h1>

                            <div class="div_container">
                                <% products.forEach(product=> { %>
                                    <% if (product.status==="visited" ) { %>
                                        <article class="art">
                                            <!-- INTENTAR PONERLO EN PARTIALS -->
                                            <!-- href="/products/detail/<%= product.id %>" -->
                                            <div class="div_img">
                                                <img src="/images/articulos/<%= product.image %>" alt="">
                                                <p class="name">
                                                    <%= product.name %>
                                                </p>
                                            </div>
                                            <div class="div_price">
                                                <% if (product.discount>0) { %>
                                                    <p class="off">
                                                        <%=product.discount + '% OFF'%>
                                                    </p>
                                                <% } %> 
                                                <p class="precio">$<%= product.price %>
                                                </p>
                                            </div>
                                            <nav class="nav_fav">
                                                <a href=""><i class="far fa-star"></i></a>
                                            </nav>
                                        </article>
                                        <% } %>
                                            <% }) %>
                            </div>
                        </section>
                        <section class="ofertas">

                            <h1>Nuevos articulos</h1>

                            <div class="div_container">
                                <% products.forEach(product=> { %>
                                    <% if (product.status==="new" ) { %>
                                        <article class="art">
                                            <!-- INTENTAR PONERLO EN PARTIALS -->
                                            <div class="div_img">
                                                <img src="/images/articulos/<%= product.image %>" alt="">
                                            </div>
                                            <div class="div_price">
                                                <p class="name">
                                                    <%= product.name %>
                                                </p>
                                                <% if (product.discount>0) { %>
                                                    <p class="off">
                                                        <%=product.discount + '% OFF'%>
                                                    </p>
                                                <% } %> 
                                                <p class="precio">$<%= product.price %>
                                                </p>
                                            </div>
                                            <nav class="nav_fav">
                                                <a href=""><i class="far fa-star"></i></a>
                                            </nav>
                                        </article>
                                        <% } %>
                                            <% }) %>
                            </div>
                        </section>

                        <section class="descuentos">

                            <h1>descuentos</h1>

                            <div class="div_container">
                                <% products.forEach(product=> { %>
                                    <% if (product.status==="discount" ) { %>
                                        <article class="art">
                                            <!-- INTENTAR PONERLO EN PARTIALS -->
                                            <div class="div_img">   
                                                <img src="/images/articulos/<%= product.image %>" alt="">
                                            </div>
                                            <div class="div_price">
                                                <% if (product.discount>0) { %>
                                                    <p class="off">
                                                        <%=product.discount + '% OFF'%>
                                                    </p>
                                                <% } %> 
                                                <p class="precio">$<%= product.price %>
                                                </p>
                                            </div>
                                            <nav class="nav_fav">
                                                <a href=""><i class="far fa-star"></i></a>
                                            </nav>
                                        </article>
                                        <% } %>
                                            <% }) %>
                            </div>
                        </section>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>