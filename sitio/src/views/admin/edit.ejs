<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body class="edit">
    <%- include('../partials/sidebar') %> 

    <body class="edit">

            <main>
                <form action="/admin/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <section class="section-add">
                        <div class="box-form">
                            <label for="name">Nombre del producto:</label>
                            <input type="text" name="name" id="name" value="<%= product.name %>">
                        </div>
                        <div class="box-form">
                            <label for="price">Precio:</label>
                            <input type="number" name="price" id="price" value="<%= product.price %>">
                        </div>
                        <div class="box-form">
                            <label for="discount">Descuento:</label>
                            <input type="number" name="discount" id="discount" value="<%= product.discount %>">
                        </div>
                        <div class="box-form">
                            <label for="category">Categorias: </label>
                            <select name="category" id="category">
                                <option value="<%= product.category.id %>" hidden selected>
                                    <%= product.category.category %>
                                </option>
                                <% categories.forEach(category=> { %> 
                                    <option value="<%= category.id %>">
                                        <%= capitalizarPrimeraLetra(category.category) %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="box-form">
                            <label for="description"> Descipci√≥n:</label>
                            <textarea name="description" id="description" cols="30"
                                rows="10"><%= product.description %> </textarea>
                        </div>
                        <div class="box-form">
                            <div class="box-i">
                            <div class="img-subir">
                                <label for="image">Agregar imagen:</label>
                                <input type="file" name="image" id="image" multiple>
                            </div>
                            <% if (product.images.length != 0) { %>
                                <% product.images.forEach(image => { %>
                                    <img src="/images/articulos/<%=image.image%>" alt="" width="80px">
                                <% }) %>  
                            <% } %>                     
                        </div>
                    </div>
                    </section>
                    <div class="box-button">
                        <button type="submit">Agregar</button>
                    </div>


                </form>
            </main>
            <%- include('../partials/footer') %> 

    </body>

</html>