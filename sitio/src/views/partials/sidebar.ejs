
    <!--========== HEADER ==========-->
    <header class="header">
        <div class="header__toggle_2">
            <i class='bx bx-menu' id="header-toggle_2"></i>
        </div>
        <div class="header__container">
            <img src="/images/fotoUser/avatar_default.png" alt="" class="header__img">

            <a href="/" class="header__logo">Ali Music</a>

            <div class="header__search">
                <input type="search" placeholder="Buscar" class="header__input">
                <i class='bx bx-search header__icon'></i>
            </div>

            <div class="header__toggle">
                <i class='bx bx-menu' id="header-toggle"></i>
            </div>
        </div>
    </header>

    <!--========== NAV ==========-->
    <div class="nav px-3" id="navbar">
        <nav class="nav__container">
            <div>
                <a href="#" class="nav__link nav__logo">
                    <i class='bx bxs-disc nav__icon' ></i>
                    <span class="nav__logo-name">Ali Music</span>
                </a>

                <div class="nav__list">
                    <div class="nav__items">

                        <a href="/" class="nav__link active">
                            <span class="nav__name">Inicio</span>
                        </a>
                        <a href="/products" class="nav__link active">
                            <span class="nav__name">Tienda</span>
                        </a>
                        <a href="/comunity" class="nav__link active">
                            <span class="nav__name">Comunidad</span>
                        </a>
                        <a href="/about" class="nav__link active">
                            <span class="nav__name">Sobre nosotras</span>
                        </a>
                        
                        <% if (!locals.userLogin) { %>
                            <a href="/users/register" class="nav__link active">
                                <span class="nav__name">Registrarse</span>
                            </a>
                            <a href="/users/login" class="nav__link active">
                                <span class="nav__name">Acceder</span>
                            </a>
                        
                        
                        <% } else{%>
                            <div class="nav__dropdown">
                                <a href="#" class="nav__link">
                                    <span class="nav__name">Profile</span>
                                    <i class='bx bx-chevron-down nav__icon nav__dropdown-icon'></i>
                                </a>
                                <div class="nav__dropdown-collapse">
                                    <div class="nav__dropdown-content">
                                        <a href="/users/profile/<%= locals.userLogin.id %>" class="nav__dropdown-item">Perfil</a>
                                        <a href="/products/cart" class="nav__dropdown-item">Carrito</a>
                                        <a href="/users/add" class="nav__dropdown-item">Agregar</a>
                                    </div>
                                </div>
                            </div>
                            <% if (locals.userLogin.rol === 1) { %>
                                <div class="nav__dropdown">
                                    <a href="#" class="nav__link">
                                        <span class="nav__name">Admin</span>
                                        <i class='bx bx-chevron-down nav__icon nav__dropdown-icon'></i>
                                    </a>
        
                                    <div class="nav__dropdown-collapse">
                                        <div class="nav__dropdown-content">
                                            <a href="/admin" class="nav__dropdown-item">Listado</a>
                                            <a href="/admin/add" class="nav__dropdown-item">Add</a>
                                        </div>
                                    </div>
                                </div>
                            <% }} %>
                        
                        
                    </div>
                </div>
            </div>

            <a href="/users/logout" class="nav__link nav__logout">
                <i class='bx bx-log-out nav__icon' ></i>
                <span class="nav__name">Log Out</span>
            </a>
        </nav>
    </div>

    <!--========== MAIN JS ==========-->
    <script src="/js/sidebar.js"></script>
