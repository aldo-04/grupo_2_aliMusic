<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="comunity">
        <%- include('../partials/header') %>
            <%- include('../partials/sidebar') %>
                <main>
                    <div class="container-main">
                        <p>Presione Un boton para publicar</a>

                        <div class="button_post">
                            <button id="open">
                                Youtube
                            </button>
                            <button id="open">
                                Video
                            </button>
                            <button id="open">
                                Texto
                            </button>
                        </div>
                            <div id="modal_container" class="modal-container">
                                <div class="div_publicar">

                                <div class="youtube">
                                    <form action="/comunity" method="POST" enctype="multipart/form-data">
                                        <div class="div_text">
                                            <input type="text" name="name" placeholder="Titulo">
                                        </div>

                                        <div class="div_link">
                                            <input type="text" name="media" placeholder="link">
                                        </div>

                                        <div class="div_description">
                                            <textarea name="description" id="description" cols="30" rows="10"
                                                placeholder="Descripcion"></textarea>
                                        </div>
                                        <button type="submit">Publicar</button>
                                        <button id="close">Cerrar</button>
                                    </form>
                                </div>

                                <div class="video">
                                    <form action="/comunity" method="POST" enctype="multipart/form-data"></form>
                                    <div class="div_text">
                                        <input type="text" name="name" placeholder="Titulo">
                                    </div>
                                    <div class="div_file">
                                        <input type="file" name="image">
                                    </div>
                                    <div class="div_description">
                                        <textarea name="description" id="description" cols="30" rows="10"
                                            placeholder="Descripcion"></textarea>
                                    </div>
                                    <button type="submit">Publicar</button>
                                    <button id="close">Cerrar</button>
                                    </form>
                                </div>
                                <div class="text">
                                    <form action="/comunity" method="POST" enctype="multipart/form-data"></form>
                                    <div class="div_text">
                                        <input type="text" name="name" placeholder="Titulo">
                                    </div>
                                    <div class="div_description">
                                        <textarea name="description" id="description" cols="30" rows="10"
                                            placeholder="Descripcion"></textarea>
                                    </div>
                                    <button type="submit">Publicar</button>
                                    <button id="close">Cerrar</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                        <div class="div_filtrar">
                            <a href=""><i class="fas fa-guitar"></i> Mejores</a>
                            <a href=""><i class="fas fa-hashtag"></i> Destacado</a>
                            <a href=""><i class="fas fa-tags"></i> Nuevo</a>
                            <a href=""><i class="fas fa-tags"></i> Mas votado</a>
                        </div>
                        <section class="section_post">
                            <% posts.forEach(post=> { %>
                                <% if (post.type==="iframe" ) { %>
                                    <article class="art">
                                        <h4>
                                            <%= post.postName %>
                                        </h4>
                                        <iframe src="<%= post.media %>"></iframe>
                                        <% if (post.description !=="" ) { %>
                                            <div class="div_p">
                                                <%= post.description %>
                                            </div>
                                            <% } %>
                                    </article>
                                    <% } else if (post.type==="image" ) { %>
                                        <article class="art">
                                            <h4>
                                                <%= post.postName %>
                                            </h4>
                                            <img src="/images/comunity/<%= post.media %>" width="100%">
                                            <% if (post.description !=="" ) { %>
                                                <div class="div_p">
                                                    <%= post.description %>
                                                </div>
                                                <% } %>
                                        </article>
                                        <% } else { %>
                                            <article class="art">
                                                <h4>
                                                    <%= post.postName %>
                                                </h4>
                                                <div class="div_p">
                                                    <%= post.description %>
                                                </div>
                                            </article>
                                            <% } %>
                                                <% }) %>
                        </section>
                    </div>

                </main>
                <%- include('../partials/footer') %>
                <script src="/js/comunity.js"></script>
    </body>

</html>