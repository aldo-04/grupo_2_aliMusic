<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="comunity">
        <%- include('../partials/header') %>
            <%- include('../partials/sidebar') %>
                <main>
                    <div class="container-main">
                        <p>Presione Un boton para publicar</a>

                        <div class="button_post">
                            <button id="openYoutube">
                                Subir desde Youtube
                            </button>
                            <button id="openVideo">
                                Subir Video/Imagen
                            </button>
                            <button id="openText">
                                Subir Solo Texto
                            </button>
                        </div>
                        <div id="modal_youtube" class="modal-youtube">

                            <div id="youtube">
                                <form class="form-comunity" action="/comunity" method="POST" enctype="multipart/form-data">
                                    <div class="div_text">
                                        <input class="input_text" type="text" name="name" placeholder="Titulo">
                                    </div>

                                    <div class="div_link">
                                        <input class="input_text" type="text" name="media" placeholder="link">
                                    </div>

                                    <div class="div_description">
                                        <textarea class="input_textarea" name="description" id="description" cols="30" rows="10"
                                            placeholder="Descripcion"></textarea>
                                    </div>
                                    <button class="button-submit" type="submit">Publicar</button>
                                </form>
                                <button class="button-close" id="closeYoutube">Cerrar</button>
                            </div>
                        </div>
                        <div id="modal_video" class="modal-video">
                            <div id="video">
                                <form class="form-comunity" action="/comunity" method="POST" enctype="multipart/form-data">
                                    <div class="div_text">
                                        <input class="input_text" type="text" name="name" placeholder="Titulo">
                                    </div>
                                    <div class="div_file">
                                        <input type="file" name="image">
                                    </div>
                                    <div class="div_description">
                                        <textarea class="input_textarea" name="description" id="description" cols="30" rows="10"
                                            placeholder="Descripcion"></textarea>
                                    </div>
                                    <button class="button-submit" type="submit">Publicar</button>
                                </form>
                                <button class="button-close" id="closeVideo">Cerrar</button>
                            </div>
                        </div>
                        <div id="modal_text" class="modal-text">
                            <div id="text">
                                <form class="form-comunity" action="/comunity" method="POST" enctype="multipart/form-data">
                                    <div class="div_text">
                                        <input class="input_text" type="text" name="name" placeholder="Titulo">
                                    </div>
                                    <div class="div_description">
                                        <textarea class="input_textarea" name="description" id="description" cols="30" rows="10"
                                            placeholder="Descripcion"></textarea>
                                    </div>
                                    <button class="button-submit" type="submit">Publicar</button>
                                </form>
                                <button class="button-close" id="closeText">Cerrar</button>
                            </div>
                        </div>

                        <div class="div_filtrar">
                            <a href=""><i class="fas fa-guitar"></i> Mejores</a>
                            <a href=""><i class="fas fa-hashtag"></i> Destacado</a>
                            <a href=""><i class="fas fa-tags"></i> Nuevo</a>
                            <a href=""><i class="fas fa-tags"></i> Mas votado</a>
                        </div>
                        <section class="section_post">
                            <% posts.forEach(post=> { %>
                                <% if (post.type==="iframe" ) { %>
                                    <article class="art">
                                        <h4>
                                            <%= post.postName %>
                                        </h4>
                                        <iframe src="<%= post.media %>"></iframe>
                                        <% if (post.description !=="" ) { %>
                                            <div class="div_p">
                                                <%= post.description %>
                                            </div>
                                            <% } %>
                                    </article>
                                    <% } else if (post.type==="image" ) { %>
                                        <article class="art">
                                            <h4>
                                                <%= post.postName %>
                                            </h4>
                                            <img src="/images/comunity/<%= post.media %>" width="100%">
                                            <% if (post.description !=="" ) { %>
                                                <div class="div_p">
                                                    <%= post.description %>
                                                </div>
                                                <% } %>
                                        </article>
                                        <% } else { %>
                                            <article class="art">
                                                <h4>
                                                    <%= post.postName %>
                                                </h4>
                                                <div class="div_p">
                                                    <%= post.description %>
                                                </div>
                                            </article>
                                            <% } %>
                                                <% }) %>
                        </section>
                    </div>

                </main>

                <%- include('../partials/footer') %>
                    <script src="/js/comunity.js"></script>
    </body>

</html>