<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="comunity">
            <%- include('../partials/sidebar') %>
                <main>
                    <div class="container-body">
                        <div class="container-main">
                            <div class="button-text-container">
                                <p class="button-text">Presione Un boton para publicar</a>
                            </div>
                        
                            <div class="button_post">
                                <button id="openYoutube">
                                    Subir desde Youtube/Spotify
                                </button>
                                <button id="openVideo">
                                    Subir Video/Imagen
                                </button>
                                <button id="openText">
                                    Subir Solo Texto
                                </button>
                            </div>
                            <div id="modal_youtube" class="modal-youtube">
                        
                                <div id="youtube">
                                    <form class="form-comunity" action="/comunity" method="POST">
                                        <div class="div_text">
                                            <input class="input_text" type="text" name="postName" placeholder="Ingrese Titulo">
                                        </div>
                        
                                        <div class="div_link">
                                            <input class="input_text" type="text" name="iframe" placeholder="Ingrese link">
                                        </div>
                        
                                        <div class="div_description">
                                            <textarea class="input_textarea" name="description" id="description" cols="30"
                                                rows="10" placeholder="Ingrese Descripcion"></textarea>
                                        </div>
                                        <button class="button-submit" type="submit">Publicar</button>
                                    </form>
                                    <button class="button-close" id="closeYoutube">Cerrar</button>
                                </div>
                            </div>
                            <div id="modal_video" class="modal-video">
                                <div id="video">
                                    <form class="form-comunity" action="/comunity/addImage" method="POST"
                                        enctype="multipart/form-data">
                                        <div class="div_text">
                                            <input class="input_text" type="text" name="postName" placeholder="Ingrese Titulo">
                                        </div>
                                        <div class="div_file">
                                            <input type="file" name="image">
                                        </div>
                                        <div class="div_description">
                                            <textarea class="input_textarea" name="description" id="description" cols="30"
                                                rows="10" placeholder="Descripcion"></textarea>
                                        </div>
                                        <button class="button-submit" type="submit">Publicar</button>
                                    </form>
                                    <button class="button-close" id="closeVideo">Cerrar</button>
                                </div>
                            </div>
                            <div id="modal_text" class="modal-text">
                                <div id="text">
                                    <form class="form-comunity" action="/comunity/addDescription" method="POST">
                                        <div class="div_text">
                                            <input class="input_text" type="text" name="postName" placeholder="Ingrese Titulo">
                                        </div>
                                        <div class="div_description">
                                            <textarea class="input_textarea" name="description" id="description" cols="30"
                                                rows="10" placeholder="Descripcion"></textarea>
                                        </div>
                                        <button class="button-submit" type="submit">Publicar</button>
                                    </form>
                                    <button class="button-close" id="closeText">Cerrar</button>
                                </div>
                            </div>
                        
                            <!-- <div class="div_filtrar">
                                <a href=""><i class="fas fa-guitar"></i> Mejores</a>
                                <a href=""><i class="fas fa-hashtag"></i> Destacado</a>
                                <a href=""><i class="fas fa-tags"></i> Nuevo</a>
                                <a href=""><i class="fas fa-tags"></i> Mas votado</a>
                            </div> -->
                            <section class="section_post">
                                <% posts.forEach(post=> { %>
                                    <% if (post.typeId == 2 ) { %>
                                        <article class="art">
                                            <h4>
                                                <%= post.postName %>
                                            </h4>
                                            <iframe src="<%= post.iframe %>"></iframe>
                                                <div class="div_p1">
                                                    <div class="div_p2">
                                                        <%= post.description %>
                                                    </div>
                                                </div>
                                        </article>
                                        <% } else if (post.typeId=== 3 ) { %>
                                            <article class="art">
                                                <h4>
                                                    <%= post.postName %>
                                                </h4>
                                                <img src="/images/comunity/<%= post.image %>" width="100%">
                                                    <div class="div_p1">
                                                        <div class="div_p2">
                                                            <%= post.description %>
                                                        </div>
                                                    </div>
                                            </article>
                                            <% } else if (post.typeId=== 4 ) { %>
                                                    <article class="art">
                                                        <h4>
                                                            <%= post.postName %>
                                                        </h4>
                                                        <video src="/images/comunity/<%= post.video %>" width="100%" controls></video>
                                                            <div class="div_p1">
                                                                <div class="div_p2">
                                                                    <%= post.description %>
                                                                </div>
                                                            </div>
                                                    </article>
                                                    <% } else { %>
                                                <article class="art">
                                                    <h4>
                                                        <%= post.postName %>
                                                    </h4>
                                                    <div class="div_p1">
                                                        <div class="div_p2">
                                                            <%= post.description %>
                                                        </div>
                                                    </div>
                                                </article>
                                                <% } %>
                                                    <% }) %>
                            </section>
                        </div >
                        <div class="container-aside">
                            <div class="aside-content">
                                <div class="aside-banner">
