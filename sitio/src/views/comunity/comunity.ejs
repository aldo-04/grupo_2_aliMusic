<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %> 
<body class="comunity">
    <%- include('../partials/header') %> 
    <%- include('../partials/sidebar') %> 
    <main>

        
        
        <div class="container-main">
        <a href="/">Ali Music</a>
            <div class="div_publicar">
                <form action="/comunity" method="POST" enctype="multipart/form-data">

                    <input type="text" name="name" placeholder="Titulo" >
                    <input type="text" name="description" placeholder="Descripcion" >
                    <input type="text" name="media"placeholder="link" >
                    <input type="file" name="image" >

                    <button type="submit">Publicar</button>
                
                </form>
            </div>
            <div class="div_filtrar">
                <a href=""><i class="fas fa-guitar"></i> Mejores</a>
                <a href=""><i class="fas fa-hashtag"></i> Destacado</a>
                <a href=""><i class="fas fa-tags"></i> Nuevo</a>
                <a href=""><i class="fas fa-tags"></i> Mas votado</a>
            </div>
            <section class="section_post">
                <% posts.forEach(post => { %>
                    <% if (post.type === "iframe") { %>
                        <article class="art">
                            <h4><%= post.postName %> </h4>
                            <iframe src="<%= post.media %>"></iframe>
                            <% if (post.description !== "") { %>
                                <div class="div_p">
                                    <%= post.description %>
                                </div>
                            <% } %>
                        </article>
                    <% } else if (post.type === "image") { %>
                        <article class="art">
                            <h4><%= post.postName %> </h4>
                            <img src="/images/comunity/<%= post.media %>" width="100%">
                            <% if (post.description !== "") { %>
                                <div class="div_p">
                                    <%= post.description %>
                                </div>
                            <% } %>
                        </article>
                    <% } else { %>
                        <article class="art">
                            <h4><%= post.postName %> </h4>
                            <div class="div_p">
                                <%= post.description %>
                            </div>
                        </article>
                        <% } %>
                <% }) %>
            </section>
        </div>

    </main>
    <%- include('../partials/footer') %> 
</body>
</html>