<html lang="es">
 
    <%- include('../partials/head') %> 

<body class="cart">

    <%- include('../partials/header') %> 
    <main>
        <h2>Carrito</h2>
        <section class="carrito">
            <div class="compra">
                <div class="img_container">
                    <img src="/images/articulos/ofertas/art03-ofertas.jpg"
                        alt="Interface-audio-behringer-U-Phoria-UMC22">
                </div>
                <div class="product">
                    <div class="detalles">
                        <p>Proucto:Audio-behringer</p>
                        <p>Precio:$****</p>
                        <div class="mas">
