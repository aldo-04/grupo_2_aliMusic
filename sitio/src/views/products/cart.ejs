        </section>
        <section class="entrega">
            <h2>Entrega</h2>
            <div class="entrega">
                <form action="">
                    <input type="email" name="email" id="email" placeholder="Correo">
                    <input type="text" name="DNI" id="DNI" placeholder="DNI">
                    <input type="text" name="nombre" id="nombre" placeholder="Nombre">
                    <input type="number" name="telefono" id="telefono" placeholder="telefono">
                    <input type="text" name="apellido" id="apellido" placeholder="Apellido">
                </form>
                <div class="compra">
                    <div class="img_d">
                        <div class="img_container">
                            <img src="/images/articulos/visita/art02-visita.jpg"
                                alt="Guitarra Electroacustica Criolla Con Funda 3 Puas De Madera">
                        </div>
                        <div class="product">
                            <div class="detalles">
                                <p>Proucto:Audio-behringer</p>
                                <p>Precio:$****</p>
                                <p>Cantidad</p>
                                <div class="mas">
                                    <i class="fas fa-plus-circle"></i>
                                    <p>01</p>
                                    <i class="fas fa-minus-circle"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="total">
                        <p>Subtotal:$****</p>
                        <p>Total:$****</p>
                    </div>
                </div>
            </div>
            <div class="box-button">
                <button type="submit">Continuar</button>
            </div>
        </section>
        <section class="usuario">
            <h2>Informacion de usuario</h2>
            <div class="usuario">
                <form action="">
                    <input type="number" name="codigo postal" id="codigo postal" placeholder="codigo postal">
                    <input type="text" name="provincia" id="provincia" placeholder="provincia">
                    <input type="text" name="ciudad" id="ciudad" placeholder="ciudad">
                    <input type="text" name="calle" id="calle" placeholder="calle">
                    <input type="number" name="N.calle" id="N.calle" placeholder="N.calle">
                </form>
                <div class="compra">
                    <div class="img_d">
                        <div class="img_container">
                            <img src="/images/articulos/ofertas/art03-ofertas.jpg"
                                alt="Interface-audio-behringer-U-Phoria-UMC22">
                        </div>
                        <div class="product">
                            <div class="detalles">
                                <p>Proucto:Audio-Behringer</p>
                                <p>Precio:$****</p>
                                <p>Cantidad</p>
                                <div class="mas">
                                    <i class="fas fa-plus-circle"></i>
                                    <p>01</p>
                                    <i class="fas fa-minus-circle"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="total">
                        <p>Subtotal:$****</p>
                        <p>Total:$****</p>
                    </div>
                </div>
            </div>
            <div class="box-button">
                <button type="submit">Continuar</button>
            </div>
        </section>
        <section class="pago">
            <div class="metodo">
                <section>
                    <label for="debito">Tarjeta de debito</label>
                    <input type="radio" id="debito" name="pago" value="dbto">
                </section>
                <section>
                    <label for="credito">Tarjeta de credito</label>
                    <input type="radio" id="credito" name="pago" value="credito">
                </section>
                <section class="efectivo">
                    <label for="efectivo">Efetivo</label>
                    <input type="radio" id="efectivo" name="pago" value="efect">
                </section>
            </div>
            <form action="">
                <input type="number" name="numero de tarjeta" id="numero de tarjeta" placeholder="numero de tarjeta">
                <div class="box-card">
                    <button type="submit" i class="fab fa-cc-visa"></i></button>
                    <button type="submit" i class="fab fa-cc-mastercard"></i></button>
                </div>
                <select name="numero de cuotas" id="numero de cuotas">
                    <option value="" selected hidden>Numero de cuotas</option>
                    <option value="dos">2</option>
                    <option value="tres">3</option>
                    <option value="cuatro">4</option>
                    <option value="cinco">5</option>
                    <option value="diez">10</option>
                    <option value="doce">12</option>
                </select>
                <input type="name" name="" id="nombre" placeholder="nombre como figura en la tarjeta">
                <input type="number" name="codigo" id="codigo" placeholder="codigo postal">
                <input type="number" name="DNI" id="DNI" placeholder="DNI">
                <div class="box-form-n">
                    <strong>
                        <p>Fecha de Nacimiento</p>
                    </strong></strong>
                    <input type="date" name="fecha"></input>
                </div>
            </form>
            <div class="compra">
                <div class="img_d">
                    <div class="img_container">
                        <img src="/images/articulos/ofertas/art03-ofertas.jpg"
                            alt="Interface-audio-behringer-U-Phoria-UMC22">
                    </div>
                    <div class="product">
                        <div class="detalles">
                            <p>Proucto:Audio-behringer</p>
                            <p>Precio:$****</p>
                            <p>Cantidad</p>
                            <div class="mas">
                                <i class="fas fa-plus-circle"></i>
                                <p>01</p>
                                <i class="fas fa-minus-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="total">
                    <p>Subtotal:$****</p>
                    <p>Total:$****</p>
                </div>
            </div>
        </section>
        <section class="rsm">
            <div class="metodo">
                <section>
                    <label for="debito">Tarjeta de debito</label>
                    <input type="radio" id="debito" name="pago" value="dbto">
                </section>
                <section>
                    <label for="credito">Tarjeta de credito</label>
                    <input type="radio" id="credito" name="pago" value="credito">
                </section>
                <section class="efectivo">
                    <label for="efectivo">Efetivo</label>
                    <input type="radio" id="efectivo" name="pago" value="efect">
                </section>
            </div>
            <div class="button-pago">
                <button type="submit">Rapipago</button>
                <button type="submit">Sucursal</button>
                <button type="submit">Mercado pago</button>
            </div>
            <a href="">
                <div class="button-final">
                    <button type="submit">Finalizar Compra</button>
                </div>
            </a>
        </section>
    </main>
    <%- include('../partials/footer') %> 
</body>

</html>